- if @user.errors.any?
  = render 'shared/error_messages', obj: @user
%div(class='well col-md-8')
  = form_for @user do |f|
    = f.label :username
    = f.text_field :username
    = f.label :email
    = f.text_field :email
    = f.label :password
    = f.password_field :password
    %hr
    = f.submit @user.new_record? ? "Register" : "Update Profile", class: 'btn btn-info'
