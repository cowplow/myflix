%article.video
  .container  
    .row
      .col-md-7
        = image_tag @video.large_cover_url
      .col-md-5
        %h2
          %strong= @video.title
        %hr
        %p= @video.description
        .actions
          %a.btn.btn-success(href="") Watch Now
          =link_to "+ My Queue", queue_items_path(video_id: @video.id), method: :post, class: 'btn btn-primary'

%section.reviews.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_for [@video, Review.new] do |f|
        %fieldset
          .form-group
            %label Rate this video
            = f.select :rating, options_for_select([5,4,3,2,1].map {|number| [pluralize(number, "Star")]})
          .form-group
            %label Write Review
            %br
            = f.text_area :content, rows: 6, class: "col-sm-6"
        %fieldset.form-group.actions.clearfix
          %input(type="submit" value="Submit" class="btn btn-primary")
          = link_to "Cancel", @video
      %header
        %h3 User Reviews (#{@reviews.count})
      %ul
        - @reviews.each do |review|
          %article.review
            %li.row
              .col-sm-2
                %span Rating: #{review.rating} / 5
                %p by <a href="">#{review.user.name}</a>
              .col-sm-8
                %p #{review.content}

     